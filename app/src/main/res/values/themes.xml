<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.QuanLyOnline" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background and text colors -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
    </style>

    <!-- Theme không có ActionBar -->
    <style name="Theme.QuanLyOnline.NoActionBar" parent="Theme.QuanLyOnline">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme cho giáo viên (tông vàng) -->
    <style name="Theme.QuanLyOnline.Teacher" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background and text colors -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
    </style>

    <!-- Theme cho admin (tông đen óng ánh) -->
    <style name="Theme.QuanLyOnline.Admin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/shiny_black</item>
        <item name="colorPrimaryVariant">@color/dark_shiny</item>
        <item name="colorOnPrimary">@color/silver</item>
        <item name="colorSecondary">@color/gold_shine</item>
        <item name="colorSecondaryVariant">@color/silver</item>
        <item name="colorOnSecondary">@color/shiny_black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/shiny_black</item>
        <item name="android:textColorPrimary">@color/silver</item>
        <item name="android:textColorSecondary">@color/light_silver</item>
    </style>

    <!-- Theme không có ActionBar cho Admin -->
    <style name="Theme.QuanLyOnline.Admin.NoActionBar" parent="Theme.QuanLyOnline.Admin">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme không có ActionBar cho Giáo viên -->
    <style name="Theme.QuanLyOnline.Teacher.NoActionBar" parent="Theme.QuanLyOnline.Teacher">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.QuanLyOnline.Student" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/student_primary</item>
        <item name="colorPrimaryVariant">@color/student_primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/student_accent</item>
        <item name="colorSecondaryVariant">@color/student_accent</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:statusBarColor">@color/student_primary_dark</item>
    </style>
</resources>